#!/usr/bin/env ruby
require 'madness'
require 'colsole'
include Colsole

runner = Madness::CLI.runner

begin
  exit runner.run ARGV
rescue Madness::Interrupt
  say! "\nGoodbye"
  exit 1
rescue => e
  puts e.backtrace.reverse if ENV['DEBUG']
  say! "!undred!#{e.class}!txtrst!\n#{e.message}"
  exit 1
end
